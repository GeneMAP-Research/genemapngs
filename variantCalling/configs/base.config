process {

    errorStrategy = { task.exitStatus in [135,143,255] ? 'retry' : 'terminate' }
    maxErrors = '-1'
    maxRetries = 5
    
    // Resources
    withLabel:smallMemory {
        cpus = 24
        time = 5.m
        memory = 2.GB
    }
    withLabel:mediumMemory {
        cpus = 22
        time = { 5.m * task.attempt }
        memory = { 1.GB * task.attempt }
    }
    withLabel:bigMemory {
        time = { 15.m * task.attempt }
        cpus = 24
        memory = { 30.GB * task.attempt }
    }
    withLabel:longRun {
        time = 2.h
        cpus = 24
        memory = 100.GB
    }
    withLabel:fastqcMem {
        time = 24.h
        cpus = 22
        memory = 100.GB
    }
    withLabel:multiqcMem {
        time = 10.m
        cpus = 1
        memory = 50.GB
    }
    withLabel:readAligner {
        time = 24.h
        cpus = 22
        memory = 100.GB
    }
    withLabel:samConverter {
        cpus = 10
        time = { 30.m * task.attempt }
        memory = { 10.GB * task.attempt }
    }
    withLabel:bamSorter {
        time = 70.m
        cpus = 22
        memory = 100.GB
    }
    withLabel:bamIndexer {
        time = 20.m
        cpus = 10
        memory = 10.GB
    }
    withLabel:fixBam {
        time = { 30.m * task.attempt }
        cpus = 22
        memory = { 100.GB * task.attempt }
    }
    withLabel:duplicateMarker {
        time = { 30.h * task.attempt }
        cpus = 24
        memory = { 100.GB * task.attempt }
    }
    withLabel:duplicateMarkerSpark {
        time = { 30.h * task.attempt }
        cpus = 5
        memory = { 100.GB * task.attempt }
    }
    withLabel:baseRecalibrator {
        time = 15.h
        cpus = 22
        memory = 100.GB
    }
    withLabel:baseRecalibratorSpark {
        time = { 24.h * task.attempt }
        cpus = 5
        memory = { 200.GB * task.attempt }
    }
    withLabel:applyBqsr {
        time = 10.h
        cpus = 22
        memory = 80.GB
    }
    withLabel:variantCaller {
        time = { 48.h * task.attempt }
        cpus = 22
        memory = { 100.GB * task.attempt }
    }
    withLabel:vqsr {
        cpus = 22
        time = { 2.h * task.attempt }
        memory = { 50.GB * task.attempt }
    }
    withLabel:applyVqsr {
        cpus = 22
        time = { 1.h * task.attempt }
        memory = { 50.GB * task.attempt }
    }
}

